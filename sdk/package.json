{
    "name": "@casperflow/sdk",
    "version": "0.1.0",
    "description": "TypeScript SDK for CasperFlow - On-chain subscription and metered billing protocol",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "author": "CasperFlow Team",
    "repository": {
        "type": "git",
        "url": "https://github.com/Abhishekgoyal007/CasperFlow"
    },
    "keywords": [
        "casper",
        "blockchain",
        "subscriptions",
        "billing",
        "web3",
